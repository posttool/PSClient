package com.pagesociety.ux{	public class MovingValue	{		private var initialValue:Number;		private var destination:Number;		private var currentValue:Number;			public function MovingValue(v:Number=0) 		{			reset(v);		}			public function set percentComplete(d:Number):void 		{			currentValue = initialValue + (destination-initialValue)*d;		}			public function reset(v:Number):void 		{			initialValue = v;			destination = v;			currentValue = v;		}			public function set value(index:Number):void 		{			if (isNaN(index))				throw new Error("!");			initialValue = currentValue;			destination = index;		}				public function get value():Number 		{			return currentValue;		}				public function get destinationValue():Number 		{			return 	destination;		}				public function get complete():Boolean		{			return currentValue==destinationValue;		}				public function toString():String		{			return "MovingValue [init="+initialValue+" dest="+destination+" value="+currentValue+"]";		}		}}